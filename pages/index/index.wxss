/* pages/index/index.wxss */
/* 轮播图区域 */
.banners{
  height: 300rpx;
  width: 100%;
}
.banners image{
  width: 100%;
  height: 100%;
}
/* 导航条区域 */
.navContainer{
  display: flex;
}
.navContainer .navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}
.navContainer .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(240, 19, 19);
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}
/* 推荐歌曲区域 */
.recommendContainer{
  padding: 20rpx;
}

/* 内容区 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.recommendScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.recommendScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.recommendScroll .scrollItem text{
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  /* 对齐方式 */
  -webkit-box-orient: vertical;
   /*行数  */
  -webkit-line-clamp: 2; 
}
/* 排行榜区域 */
.topList{
  padding: 20rpx;
}
.topList .topSwiper{
  height: 400rpx;
}
.topSwiper .topItem{
  width: 96%;
  background-color: #fbfbfb;
}
.topItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.topItem .listMusic{
  display: flex;
}
.topItem .listMusic image{
  width: 100rpx;
  height: 100rpx;
}
.topItem .listMusic .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.topItem .listMusic .name{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}