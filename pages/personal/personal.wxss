/* pages/personal/personal.wxss */
.personContainer{
  width: 100%;
  height: 100%;
}
.userInfo{
  position: relative;
  height: 520rpx;
  padding: 100rpx 30rpx 0;
}
.userInfo>image{
  position: absolute;
  
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.userInfo .toLogin{
  position: relative;
  display: flex;
  align-items: center;
  height: 180rpx;
}
.userInfo .toLogin>image{
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}
.userInfo .toLogin>text{
  font-size: 34rpx;
  color: #303133;
  margin-left: 20rpx;
}
.userInfo .vip-card-box{
  display: flex;
  position: relative;
  height: 240rpx;
  background-color: rgba(0, 0, 0, .7);
  padding: 20rpx 24rpx;
  flex-direction: column;
  border-radius: 16rpx 16rpx 0 0;
  color: #f7d680
}
.vip-card-box>image{
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.vip-card-box .openVip{
  position: absolute;
  right: 20rpx;
  top: 16rpx;
  width: 132rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #36343c;
  border-radius: 20px;
  background: #f9e6af;
  z-index: 1;
}
.vip-card-box .WyyVip{
  font-size: 22rpx;
  color: #f7d680;
  margin-bottom: 28rpx;
}
.vip-card-box .WyyVip .iconfont{
  color: #f6e5a3;
  margin-right: 16rpx;
}
.vip-card-box .des{
  font-size: 34rpx;
  margin-top: 10rpx;
}
.vip-card-box .openDes{
  font-size: 24rpx;
  color: #d8cba9;
  margin-top: 10rpx;
}
.userContainer{
  position: relative;
  margin-top: -150rpx;
  padding: 0 30rpx 20rpx;
  background-color: #f5f5f5;
}
.userContainer>image{
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}
.userContainer .navBar{
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}
.navBar .navItem{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
}
.navBar .navItem .iconfont{
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}
.userContainer .personalContent{
  margin-top: 20rpx;
  background-color: #fff;
}
.personalContent .userContent>text{
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 80rpx;
}
/* 播放记录 */
.personalContent .userContent .recordList{
  display: flex;
  height: 200rpx;
}
.userContent .recordList .recordItem{
  margin-right: 10rpx;
}
.userContent .recordList .recordItem>image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.personalContent .cardList{
  margin-top: 20rpx;
}
.cardList .cardItem{
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}
.cardList .cardItem .more{
  float: right;
}
