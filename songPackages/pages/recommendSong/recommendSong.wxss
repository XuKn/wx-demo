/* pages/recommendSong/recommendSong.wxss */
/* 头部 */
.header{
  position: relative;
  height: 300rpx;
  width: 100%;
}
.header>image{
  width: 100%;
  height: 100%;
}
.header .nowDate{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}
.header .nowDate>text{
  color: #fff;
  font-size: 32rpx;
}
.header .nowDate .t{
  margin: 0 10rpx;
  font-size: 40rpx;
}
.header .nowDate .mouth{
  font-size: 40rpx;
}
/* 列表区域 */
.listContainer{
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #fff;
}
/* 列表头部区域 */
.listContainer .listHeader{
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .more{
  float: right;
}
/* 列表项区域 */
.listScroll {
  height: calc(100vh - 380rpx);
}
.listScroll .scrollItem{
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.scrollItem>image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.scrollItem .musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.scrollItem .musicInfo>text{
  font-size: 26rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.scrollItem .iconfont{
  position: absolute;
  right: 0;
  text-align: right;
  line-height: 80rpx;
  font-size: 26rpx;
  width: 80rpx;
  height: 80rpx;
  color: rgb(129, 128, 128);
}